<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardMapper">
  
  <resultMap type="Board" id="BoardMap">
    <id column="board_id" property="no"/> 
    <result column="contents" property="content"/>
    <result column="created_date" property="registeredDate"/>
    <result column="view_count" property="viewCount"/>
  </resultMap>
  
  <select id="select1" resultMap="BoardMap" parameterType="string">
    select 
      board_id,
      title,    
      contents,
      created_date, 
      view_count  
    from x_board
    where title like concat('%', #{keyboard}, '%')
  </select>
  
    <select id="select2" resultMap="BoardMap" parameterType="string">
      <bind name="pattern1" value="'%' + _parameter + '%'"/>
      select 
        board_id,
        title,    
        contents,
        created_date, 
        view_count  
      from x_board
      where title like #{pattern1}
  </select>
</mapper>







